{
  "compilerOptions": {
    "declaration": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "lib": [
      "es2017"
    ],
    "types": [
      "jest",
      "node"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
